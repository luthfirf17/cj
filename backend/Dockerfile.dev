# Backend Development Dockerfile
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Install nodemon globally for development
RUN npm install -g nodemon

# Copy source code
COPY . .

# Expose port
EXPOSE 5001

# Start with nodemon for hot-reload
CMD ["nodemon", "src/server.js"]