# Environment Variables for Production
# Copy this file to .env and fill in your values

# Domain Configuration
DOMAIN=https://catatjasamu.com
FRONTEND_URL=https://catatjasamu.com
BACKEND_URL=https://api.catatjasamu.com

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=https://api.catatjasamu.com/api/auth/google/callback

# Google Calendar Configuration (Separate from OAuth)
GOOGLE_CALENDAR_CLIENT_ID=your_google_calendar_client_id_here
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_calendar_client_secret_here
GOOGLE_CALENDAR_REDIRECT_URI=https://api.catatjasamu.com/api/auth/google/calendar/callback

# API Configuration
VITE_API_URL=https://api.catatjasamu.com

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=catat_jasamu_db
DB_USER=postgres
DB_PASSWORD=your_secure_db_password

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRE=7d

# Node Environment
NODE_ENV=production
PORT=5001